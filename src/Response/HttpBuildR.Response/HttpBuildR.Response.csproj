<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <Authors>Ben Mazzarol</Authors>
    </PropertyGroup>

    <PropertyGroup>
        <PackageId>HttpBuildR.Response</PackageId>
        <Title>Http BuildR Response</Title>
        <Description>Simple response builder functions on top of System.Net.Http!</Description>
        <PackageTags>C#, Functional, Fluent, Builder, System.Net.Http, Response, HttpResponseMessage</PackageTags>
        <PackageProjectUrl>https://bmazzarol.github.io/Http-BuildR</PackageProjectUrl>
        <RepositoryUrl>https://github.com/bmazzarol/Http-BuildR</RepositoryUrl>
        <PackageLicenseExpression>MIT</PackageLicenseExpression>
        <Copyright>Copyright (c) Ben Mazzarol. All rights reserved.</Copyright>
        <ProjectGuid>d4e22a46-f4cd-400e-85bb-f849038bb67b</ProjectGuid>
        <IncludeSymbols>true</IncludeSymbols>
        <SymbolPackageFormat>snupkg</SymbolPackageFormat>
        <PublishRepositoryUrl>true</PublishRepositoryUrl>
        <EmbedUntrackedSources>true</EmbedUntrackedSources>
        <IsPackable>true</IsPackable>
        <DocumentationFile>bin\$(Configuration)\$(TargetFramework)\$(AssemblyName).xml</DocumentationFile>
        <PackageReadmeFile>README.md</PackageReadmeFile>
        <PackageIcon>construction-icon.png</PackageIcon>
    </PropertyGroup>

    <PropertyGroup>
        <TargetFramework>netstandard2.0</TargetFramework>
        <OutputType>library</OutputType>
        <LangVersion>latest</LangVersion>
    </PropertyGroup>

    <ItemGroup>
        <None Include="README.md" Pack="true" PackagePath="\"/>
        <None Include="..\..\..\construction-icon.png" Pack="true" PackagePath="\"/>
        <PackageReference Include="Microsoft.SourceLink.GitHub" PrivateAssets="All"/>
    </ItemGroup>

    <ItemGroup>
        <PackageReference Include="System.Text.Json"/>
    </ItemGroup>
</Project>
